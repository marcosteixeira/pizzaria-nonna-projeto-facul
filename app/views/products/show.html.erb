<div>
  <ol>
    <% for variable in @product.variables %>
        <p>
          <strong><%= "#{t("activerecord.attributes.variable.name")}:" %></strong>
          <%= variable.name %>
        </p>

        <p>
          <strong><%= "#{t("activerecord.attributes.variable.code")}:" %></strong>
          <%= variable.code %>
        </p>
    <% end %>
  </ol>
</div>

<%= link_to 'Editar', edit_product_path(@product), class: "button radius" %>
