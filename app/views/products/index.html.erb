<h1>Produtos</h1>
<%= link_to t("helpers.submit.create", model: t("activerecord.models.product")), new_product_path, class: "button radius" %>

<% if @products.present? %>
    <table>
      <thead>
      <tr>
        <th><%= t("activerecord.attributes.product.code") %></th>
        <th><%= t("activerecord.attributes.product.name") %></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
          <tr>
            <td><%= product.code %></td>
            <td><%= product.name %></td>
            <td><%= link_to 'Mostrar', product %></td>
            <td><%= link_to 'Editar', edit_product_path(product) %></td>
            <td><%= link_to 'Apagar', product, method: :delete, data: {confirm: t("general.messages.confirmation")} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

<% end %>
